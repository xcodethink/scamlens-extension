{
  "manifest_version": 3,
  "name": "__MSG_extName__",
  "short_name": "__MSG_extShortName__",
  "description": "__MSG_extDescription__",
  "version": "1.1.0",
  "default_locale": "en",
  "minimum_chrome_version": "102",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "src/popup/index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png"
    },
    "default_title": "__MSG_extName__"
  },
  "background": {
    "service_worker": "src/background/index.ts",
    "type": "module"
  },
  "options_ui": {
    "page": "src/options/index.html",
    "open_in_tab": true
  },
  "permissions": [
    "storage",
    "contextMenus",
    "alarms",
    "tabs",
    "scripting",
    "activeTab"
  ],
  "optional_permissions": [
    "bookmarks",
    "identity",
    "notifications"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "commands": {
    "save-bookmark": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "__MSG_cmdSaveBookmark__"
    },
    "open-manager": {
      "suggested_key": {
        "default": "Ctrl+Shift+B",
        "mac": "Command+Shift+B"
      },
      "description": "__MSG_cmdOpenManager__"
    }
  },
  "chrome_url_overrides": {
    "newtab": "src/manager/index.html"
  }
}
